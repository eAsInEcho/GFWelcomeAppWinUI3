<UserControl
    x:Class="GFSetupWizard.App.WinUI3.Views.OutlookSetupStepView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="White"/>
        </Grid.Background>

        <!-- World Map image in background -->
        <Image Source="ms-appx:///Resources/Images/New_GF_icons_World Map_purp.png" 
               Opacity="0.5" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Top" 
               Width="400" 
               Height="400" 
               Margin="0,0,0,0"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="20,20,75,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header with colon graphic element -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Microsoft" 
                               Style="{StaticResource HeaderTextStyle}"
                               Margin="0"/>
                    <Grid Margin="10,0,0,0" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Width="12" Height="12" Background="{StaticResource OutlookBrush}" Grid.Row="0" Margin="0,0,0,2"/>
                        <Border Width="12" Height="12" Background="{StaticResource OutlookBrush}" Grid.Row="1" Margin="0,2,0,0"/>
                    </Grid>
                    <TextBlock Text="Outlook Setup" 
                               Style="{StaticResource HeaderTextStyle}"
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Email and Calendar" 
                               Style="{StaticResource SubHeaderTextStyle}"
                               Foreground="{StaticResource OutlookBrush}"/>
                    
                    <Border Background="{StaticResource GFLightGreyBrush}" 
                            Padding="15" 
                            Margin="0,0,0,20"
                            CornerRadius="4">
                        <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0">
                            Microsoft Outlook is your professional email, calendar, and contact management tool. 
                            Setting it up properly ensures you stay connected with your colleagues and clients.
                        </TextBlock>
                    </Border>
                    
                    <TextBlock Text="Setup Guide" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource OutlookBrush}"
                               Margin="0,-10,0,10"/>
                    
                    <!-- Steps with numbered items -->
                    <Grid Margin="0,10,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Step 1 -->
                        <Border Grid.Row="0" Grid.Column="0" 
                                Width="24" Height="24" 
                                Background="{StaticResource OutlookBrush}" 
                                CornerRadius="12"
                                Margin="0,5,0,5">
                            <TextBlock Text="1" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Foreground="White" 
                                       FontWeight="Bold"/>
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="Click the button below to open Outlook" 
                                   VerticalAlignment="Center" 
                                   Margin="10,5,0,5"/>
                        
                        <!-- Step 2 -->
                        <Border Grid.Row="1" Grid.Column="0" 
                                Width="24" Height="24" 
                                Background="{StaticResource OutlookBrush}" 
                                CornerRadius="12"
                                Margin="0,5,0,5">
                            <TextBlock Text="2" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Foreground="White" 
                                       FontWeight="Bold"/>
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="Enter your GF email address when prompted (first.lastname@globalfoundries.com)" 
                                   VerticalAlignment="Center" 
                                   TextWrapping="Wrap"
                                   Margin="10,5,0,5"/>
                        
                        <!-- Step 3 -->
                        <Border Grid.Row="2" Grid.Column="0" 
                                Width="24" Height="24" 
                                Background="{StaticResource OutlookBrush}" 
                                CornerRadius="12"
                                Margin="0,5,0,5">
                            <TextBlock Text="3" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Foreground="White" 
                                       FontWeight="Bold"/>
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   Text="Uncheck the option to install Outlook Mobile because it can be completed another time" 
                                   VerticalAlignment="Center" 
                                   Margin="10,5,0,5"/>
                        
                        <!-- Step 4 -->
                        <Border Grid.Row="3" Grid.Column="0" 
                                Width="24" Height="24" 
                                Background="{StaticResource OutlookBrush}" 
                                CornerRadius="12"
                                Margin="0,5,0,5">
                            <TextBlock Text="4" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Foreground="White" 
                                       FontWeight="Bold"/>
                        </Border>
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                   Text="Outlook is also available on the web at outlook.office.com" 
                                   VerticalAlignment="Center" 
                                   Margin="10,5,0,5"/>
                    </Grid>
                    
                    <Button Content="Launch Outlook" 
                            Background="{StaticResource OutlookBrush}"
                            Foreground="White"
                            Padding="15,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,0"
                            Click="LaunchOutlook_Click"/>
                    
                    <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">
                        Once you have completed setting up Outlook, click <Bold>Next</Bold> to continue to the next step.
                    </TextBlock>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
