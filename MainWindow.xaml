<Window
    x:Class="GFSetupWizard.App.WinUI3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:GFSetupWizard.App.WinUI3"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource GFOrangeBrush}"
                Margin="0"
                Height="50"
                CornerRadius="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <!-- GF Logo - Globe image -->
                <Image Grid.Column="0"
                       Width="40" 
                       Height="40" 
                       Margin="10,5,10,5"
                       Source="ms-appx:///Resources/Images/New_GF_icons_Globe_wht.png"/>

                <!-- Title with colon graphic element -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="GF" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>

                    <Grid Margin="10,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" 
                                Width="10" 
                                Height="10" 
                                Background="White" 
                                Margin="0,0,0,2"/>
                        <Border Grid.Row="1" 
                                Width="10" 
                                Height="10" 
                                Background="White" 
                                Margin="0,2,0,0"/>
                    </Grid>

                    <TextBlock Text="Setup Wizard" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <!-- Spacer for window controls -->
                <Border Grid.Column="2" Width="50" Height="32"/>
            </Grid>
        </Border>

        <!-- Content Area -->
        <ContentControl x:Name="StepContent" 
                        Grid.Row="1" 
                        Margin="0"/>

        <!-- Navigation Area -->
        <Grid Grid.Row="2" 
              Background="{StaticResource GFLightGreyBrush}"
              Margin="-1"
              CornerRadius="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ProgressBar x:Name="StepProgress" 
                         Grid.Column="0" 
                         Height="40" 
                         Margin="10,0,5,0"
                         Foreground="{StaticResource GFPurpleBrush}"/>

            <CheckBox x:Name="AutoRunCheckbox" 
                      Grid.Column="1" 
                      Content="Run at startup" 
                      VerticalAlignment="Center" 
                      Margin="10,0,10,0"
                      Checked="AutoRunCheckbox_Checked"
                      Unchecked="AutoRunCheckbox_Unchecked"/>

            <Button x:Name="BackButton" 
                    Grid.Column="2" 
                    Content="Back" 
                    Width="75" 
                    Margin="0,4,10,4"
                    CornerRadius="10"
                    Background="White"
                    BorderBrush="{StaticResource GFOrangeBrush}"
                    Foreground="{StaticResource GFOrangeBrush}"
                    Click="BackButton_Click"/>

            <Button x:Name="NextButton" 
                    Grid.Column="3" 
                    Content="Next" 
                    Width="75"
                    Margin="0,4,4,4"
                    Background="{StaticResource GFOrangeBrush}"
                    BorderBrush="{StaticResource GFOrangeBrush}"
                    Foreground="White"
                    CornerRadius="10"
                    Click="NextButton_Click"/>
        </Grid>
    </Grid>
</Window>
